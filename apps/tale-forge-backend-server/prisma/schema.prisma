datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model TaleCoinTransaction {
  amount    Int?
  createdAt DateTime                          @default(now())
  date      DateTime?
  id        String                            @id @default(cuid())
  typeField EnumTaleCoinTransactionTypeField?
  updatedAt DateTime                          @updatedAt
  user      User?                             @relation(fields: [userId], references: [id])
  userId    String?
}

model Story {
  authorMimic String?
  content     String?
  createdAt   DateTime @default(now())
  genre       String?
  id          String   @id @default(cuid())
  title       String?
  updatedAt   DateTime @updatedAt
  user        User?    @relation(fields: [userId], references: [id])
  userId      String?
}

model Writer {
  bio            String?
  createdAt      DateTime @default(now())
  id             String   @id @default(cuid())
  profilePicture Json?
  updatedAt      DateTime @updatedAt
  user           User?    @relation(fields: [userId], references: [id])
  userId         String?
}

model User {
  createdAt            DateTime              @default(now())
  email                String?               @unique
  firstName            String?
  id                   String                @id @default(cuid())
  lastName             String?
  password             String
  roles                Json
  stories              Story[]
  taleCoinTransactions TaleCoinTransaction[]
  updatedAt            DateTime              @updatedAt
  username             String                @unique
  writers              Writer[]
}

enum EnumTaleCoinTransactionTypeField {
  Option1
}
